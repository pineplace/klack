{
  "name": "klack",
  "description": "Instant screen recording browser extension with floating camera view",
  "version": "0.10.0",
  "type": "module",
  "scripts": {
    "test": "jest --maxWorkers=50% --silent",
    "test:watch": "jest --maxWorkers=50% --watch --silent",
    "test:coverage": "jest --maxWorkers=50% --coverage --silent",
    "build": "hereby build",
    "build:release": "hereby build:release",
    "clean": "hereby clean",
    "dev": "hereby dev",
    "lint": "eslint",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pineplace/klack"
  },
  "author": {
    "name": "Yury Getman",
    "email": "imblowfish@duck.com",
    "url": "https://github.com/imblowfish"
  },
  "bugs": {
    "url": "https://github.com/pineplace/klack/issues"
  },
  "license": "ISC",
  "dependencies": {
    "@eslint/js": "^9.26.0",
    "@jest/globals": "^29.7.0",
    "@tabler/icons-react": "^3.31.0",
    "@tailwindcss/cli": "^4.1.5",
    "@testing-library/react": "^16.3.0",
    "@types/chrome": "^0.0.320",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.15",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@types/shelljs": "^0.8.15",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "dotenv": "^16.5.0",
    "esbuild": "^0.25.4",
    "esbuild-jest": "^0.5.0",
    "eslint": "^9.26.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "execa": "^9.5.2",
    "globals": "^16.1.0",
    "hereby": "^1.10.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "shelljs": "^0.9.2",
    "tailwindcss": "^4.1.5",
    "typescript": "^5.8.3"
  }
