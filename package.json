{
  "name": "klack",
  "description": "Instant screen recording browser extension with floating camera view",
  "version": "0.8.0",
  "type": "module",
  "scripts": {
    "test": "jest --maxWorkers=50% --silent",
    "test:watch": "jest --maxWorkers=50% --watch --silent",
    "test:coverage": "jest --maxWorkers=50% --coverage --silent",
    "build": "tsc --noEmit && node ./esbuild.mjs --build",
    "build:release": "tsc --noEmit && node ./esbuild.mjs --build --release",
    "dev": "tsc --noEmit --watch & node ./esbuild.mjs --watch",
    "clean": "rm -rf ./public/*.mjs* ./coverage .jest-test-results.json",
    "lint": "eslint --ext .mjs --ext .ts --ext .tsx .",
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/imblowfish/klack"
  },
  "author": {
    "name": "Yury Getman",
    "email": "imblowfish@duck.com",
    "url": "https://github.com/imblowfish"
  },
  "bugs": {
    "url": "https://github.com/imblowfish/klack/issues"
  },
  "license": "ISC",
  "dependencies": {
    "@emotion/react": "^11.11.4",
    "@emotion/styled": "^11.11.5",
    "@jest/globals": "^29.7.0",
    "@mui/icons-material": "^5.15.14",
    "@mui/material": "^5.15.14",
    "@testing-library/react": "^14.2.2",
    "@types/chrome": "^0.0.263",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "dexie": "^4.0.9",
    "esbuild": "^0.24.0",
    "esbuild-jest": "^0.5.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-draggable": "^4.4.6",
    "typescript": "^5.4.3"
  }
}
