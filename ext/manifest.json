{
  "name": "klack",
  "description": "Write me",
  "version": "0.8.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "./popup.html"
  },
  "background": {
    "service_worker": "./background.bundle.mjs",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "tabs",
    "downloads",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["camera_bubble_stream.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
